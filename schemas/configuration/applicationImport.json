{
  "title": "Upload Application File",
  "properties": {
    "name": {
      "type": "string",
      "title": "Give your application file a name"
    },
    "applicationType": {
      "title": "Select application type ",
      "enum": [
        "Helm Chart",
        "Kubernetes Manifest",
        "Docker Compose"
      ],
      "default": "Helm Chart"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "applicationType": {
            "const": "Helm Chart"
          }
        }
      },
      "then": {
        "title": "",
        "properties": {
          "url": {
            "type": "string",
            "title": "URL",
            "format": "uri",
            "description": "raw url of the application file, example: https://raw.github.com/..."
          }
        },
        "required": [
          "url"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "applicationType": {
            "const": "Kubernetes Manifest"
          }
        }
      },
      "then": {
        "oneOf": [
          {
            "title": "URL upload",
            "properties": {
              "url": {
                "type": "string",
                "title": "URL",
                "format": "uri",
                "description": "raw url of the application file, example: https://raw.github.com/..."
              }
            },
            "required": [
              "url"
            ]
          },
          {
            "title": "File Upload",
            "properties": {
              "file": {
                "type": "string",
                "format": "file",
                "description": "Browse the application file from your file system"
              }
            },
            "required": [
              "file"
            ]
          }
        ],
        "required": [
          "url"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "applicationType": {
            "const": "Docker Compose"
          }
        }
      },
      "then": {
        "oneOf": [
          {
            "title": "URL upload",
            "properties": {
              "url": {
                "type": "string",
                "title": "URL",
                "format": "uri",
                "description": "raw url of the application file, example: https://raw.github.com/..."
              }
            },
            "required": [
              "url"
            ]
          },
          {
            "title": "File Upload",
            "properties": {
              "file": {
                "type": "string",
                "format": "file",
                "description": "Browse the application file from your file system"
              }
            },
            "required": [
              "file"
            ]
          }
        ],
        "required": [
          "url"
        ]
      }
    }
  ]
}